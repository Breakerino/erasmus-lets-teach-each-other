---
import {
	SITE_LOGO,
	SITE_NAME,
	SITE_SECTIONS,
	NAVIGATION_ITEMS,
} from "../app/constants";
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="main.css" />
		<title>{SITE_NAME}</title>
	</head>
	<body>
		<div class="site-wrapper">
			<header class="sticky top-0 w-full bg-blue-400 z-10">
				<div class="flex justify-between gap-5 text-white container px-4 py-9">
					<img src={SITE_LOGO} alt={SITE_NAME} />
					<nav class="flex items-center gap-8">
						{
							NAVIGATION_ITEMS.map(({ id, label }) => (
								<a class="text-md uppercase font-normal" href={`#${id}`}>
									{label}
								</a>
							))
						}
					</nav>
				</div>
			</header>
			<main>
				<!-- Section 1 | Hero -->
				<section
					class="h-[40rem] bg-gradient-to-b from-blue-400 to-blue-600 py-40"
				>
					<div
						class="container h-full flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between"
					>
						<div class="flex flex-col gap-4 text-white">
							<hgroup class="flex flex-col gap-3">
								<h2 class="text-3xl lg:text-4xl">Erasmus+ KA2</h2>
								<h1 class="text-4xl lg:text-6xl font-bold">
									Let's teach each other
								</h1>
								<small class="text-md lg:text-lg"
									><span class="font-thin">Project number</span>
									<strong class="font-medium"
										>2019-1-SK01-KA229-060637_2
									</strong>
								</small>
							</hgroup>
							<img
								width="256"
								height="auto"
								src="/images/img-cofunded-by.png"
								alt="Co-funded by the Erasmus+ Programme of the European Union"
							/>
						</div>
						<div class="rounded-md overflow-hidden">
							<img
								src="/images/img-section-hero.png"
								alt="Let's teach each other (2019-2021)"
							/>
						</div>
					</div>
				</section>

				<!-- Section 2 | Summary -->
				<section class="py-40">
					<a id={SITE_SECTIONS.summary.id} class="block relative -top-[16rem]"></a>
					<div class="container h-full flex flex-col">
						<hgroup class="flex flex-col gap-3 mb-10">
							<h1
								class="text-blue-600 w-fit text-4xl lg:text-5xl font-bold relative mb-4 before:content-[''] before:absolute before:-bottom-4 before:w-1/3 before:h-[0.5rem] before:bg-slate-200 before:rounded-md"
							>
								{SITE_SECTIONS.summary.heading}
							</h1>
						</hgroup>
						<div class="flex flex-col lg:flex-row gap-4">
							{
								SITE_SECTIONS.summary.columns.map((paragraphs) => (
									<div class="mb-5 lg:mb-0">
										{paragraphs.map((paragraph) => (
											<p class="text-lg font-light leading-8 mb-5 last:mb-0">
												{paragraph}
											</p>
										))}
									</div>
								))
							}
						</div>
					</div>
				</section>

				<!-- Section 3 | Objectives -->
				<section class="py-40 bg-blue-50 bg-opacity-75">
					<a id={SITE_SECTIONS.objectives.id} class="block relative -top-[16rem]"></a>
					<div class="container h-full flex flex-col">
						<hgroup class="flex flex-col gap-3 mb-10">
							<h1
								class="text-blue-600 w-fit text-4xl lg:text-5xl font-bold relative mb-4 before:content-[''] before:absolute before:-bottom-4 before:w-1/3 before:h-[0.5rem] before:rounded-md before:bg-blue-800 before:bg-opacity-20"
							>
								{SITE_SECTIONS.objectives.heading}
							</h1>
						</hgroup>
						<div class="grid grid-cols-2 gap-8 text-blue-600">
							{
								SITE_SECTIONS.objectives.items.map(({ text }, index) => (
									<div class="flex gap-5 items-center">
										<div class="w-16 aspect-square bg-gradient-to-b from-blue-400 to-blue-600 p-2 rounded-md">
											<img
												class="w-full h-full object-contain object-center"
												src={`/icons/ico-objective-${index + 1}.png`}
												alt={`objective-${index + 1}`}
											/>
										</div>
										<span class="flex-1 text-xl leading-8">{text}</span>
									</div>
								))
							}
						</div>
					</div>
				</section>

				<!-- Section 4 | Partners -->
				<section class="py-40 bg-white">
					<a id={SITE_SECTIONS.partners.id} class="block relative -top-[16rem]"></a>
					<div class="container h-full flex flex-col">
						<hgroup class="flex flex-col gap-3 mb-10">
							<h1
								class="text-blue-600 w-fit text-4xl lg:text-5xl font-bold relative mb-4 before:content-[''] before:absolute before:-bottom-4 before:w-1/3 before:h-[0.5rem]  before:bg-slate-200 before:rounded-md"
							>
								{SITE_SECTIONS.partners.heading}
							</h1>
						</hgroup>
						<div class="flex flex-col gap-8 text-blue-800">
							{
								SITE_SECTIONS.partners.items.map(
									({ id, name, description, country }, index) => (
										<div class="flex gap-6 items-start">
											<div class="relative ml-8 mt-10">
												<div class="w-12 aspect-square bg-white shadow-md p-1 rounded-md absolute -top-8 -left-8">
													<img
														class="w-full h-full object-contain object-center"
														src={`/icons/ico-country-logo-${country}.svg`}
														alt={`country-logo-${country}`}
													/>
												</div>
												<div class="w-24 aspect-square bg-white shadow-md p-4 rounded-md">
													<img
														class="w-full h-full object-contain object-center"
														src={`/images/img-school-logo-${id}.png`}
														alt={`school-logo-${id}`}
													/>
												</div>
											</div>
											<div class="flex flex-col flex-1">
												<h2 class="flex-1 text-xl font-medium leading-8 mb-2">{name}</h2>
												<p class="text-lg font-light leading-8 mb-5 last:mb-0">
													{description}
												</p>
											</div>
										</div>
									)
								)
							}
						</div>
					</div>
				</section>
			</main>
		</div>
	</body>
</html>
