---
const section = Astro.props;
---

<div class="grid grid-cols-3 gap-8 text-blue-700">
	{
		section.data.items.map(({ icon, text }, index) => (
			<div class="flex gap-5 items-start">
				<div class="w-16 aspect-square bg-gradient-to-b from-blue-400 to-blue-600 p-2 rounded-md">
					<img
						class="w-full h-full object-contain object-center"
						src={`/images/ico-${icon}.png`}
						alt={`objective-${index + 1}`}
					/>
				</div>
				<span class="flex-1 text-xl leading-8">{text}</span>
			</div>
		))
	}
</div>
