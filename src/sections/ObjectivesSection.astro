---
const section = Astro.props;
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 text-blue-700">
	{
		section.data.items.map(({ icon, text }, index) => (
			<div class="flex gap-5 items-center lg:items-start">
				<div class="w-12 md:w-14 lg:w-16 aspect-square bg-gradient-to-b from-blue-400 to-blue-600 p-2 rounded-md">
					<img
						class="w-full h-full object-contain object-center"
						src={`/icons/ico-${icon}.png`}
						alt={`objective-${index + 1}`}
					/>
				</div>
				<span class="flex-1 text-md md:text-lg lg:text-xl leading-6 lg:leading-8">{text}</span>
			</div>
		))
	}
</div>
