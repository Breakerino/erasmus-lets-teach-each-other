---
interface SectionProps {
	id: string;
	heading?: string;
	className?: {
		wrapper?: string[]
		heading?: string[]
		container?: string[]
	} 
}

const section: Partial<SectionProps> = {
	...Astro.props,
	className: {
		wrapper: Astro.props?.className?.wrapper ?? [],
		container: Astro.props?.className?.content ?? [],
		heading: Astro.props?.className?.heading ?? [],
	}
};
---

<section class:list={[...section.className.wrapper]}>
	<a id={section.id} class="block relative -top-[16rem]"></a>
	
	<div class:list={['container', 'h-full', ...section.className.container]}>
		{section.heading &&
			<hgroup class="flex flex-col gap-3 mb-10">
				<h1 class:list={[ "text-blue-600", "w-fit", "text-4xl", "lg:text-5xl", "font-bold", "relative", "mb-4", "before:content-['']", "before:absolute", "before:-bottom-4", "before:w-1/3", "before:h-[0.5rem]", "before:rounded-md", ...section.className.heading]}>
					{section.heading}
				</h1>
			</hgroup>
		}
		<slot />
	</div>
</section>